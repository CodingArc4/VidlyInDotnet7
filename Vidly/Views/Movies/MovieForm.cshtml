@model Vidly.ViewModels.MovieFromViewModel

@{
    ViewData["Title"] = "MovieForm";
}

<h1>New Movie</h1>
<form method="post" asp-action="Save" asp-controller="Movies">
    <div class="form-group">
        <label asp-for="Movie.Name"></label>
        <input asp-for="Movie.Name" class="form-control" />
    </div>

    <br />

    <div class="form-group">
        <label asp-for="Movie.ReleaseDate"></label>
        <input asp-for="Movie.ReleaseDate" class="form-control" />
    </div>

    <br />

    <div class="form-group">
        <label asp-for="Movie.GenreId"></label>
        @Html.DropDownListFor(m=> m.Movie.GenreId,new SelectList(Model.Genres,"Id","Name"),
        "Select Genre",new {@class="form-control"})
    </div>

    <br />

    <div class="form-group">
        <label asp-for="Movie.NumberInStock"></label>
        <input asp-for="Movie.NumberInStock" class="form-control" />
    </div>


    <br />
    @Html.HiddenFor(m => m.Movie.Id)
    <button type="submit" class="btn btn-primary">Save</button>
</form>

