@model Vidly.ViewModels.CustomerFormViewModel

@{
    ViewData["Title"] = "New";
}

<h1>New Customer</h1>
<form method="post" asp-action="Save" asp-controller="Customers">

    <input hidden asp-for="Customer.Id" />

    <div class="form-group">
        <label asp-for="Customer.Name"></label>
        <input asp-for="Customer.Name" class="form-control" />
        <span asp-validation-for="Customer.Name" class="text-danger"></span>
    </div>

    <br />

    <div class="form-group">
        <label asp-for="Customer.BirthDate"></label>
        <input asp-for="Customer.BirthDate" class="form-control" />
        <span asp-validation-for="Customer.BirthDate" class="text-danger"></span>

    </div>

    <br />

    <div class="form-group">
        <label asp-for="Customer.MembershipTypeId"></label>
         <select asp-for="Customer.MembershipTypeId" class="form-control">
            <option value="">Select Membership</option>
                @foreach(var item in Model.MembershipTypes)
                {
                    <option value="@item.Id">@item.Name</option>
                }
         </select>
    </div>

    <br />

    <div class="checkbox">
        <input asp-for="Customer.IsSubscribedToNewsletter" />
        Subscribed To Newsletter?
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Save</button>
</form>


@section scripts{
    <partial name="_ValidationScriptsPartial" />
}